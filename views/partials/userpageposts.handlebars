<div class="card rounded-lg mb-4 ">
  <div class="card-header bg-dark border-dark user-identity user-img mb-10">
          <img src="{{user_avatar}}" class="img-fluid user-img" alt="" />
          <h5 class="card-title mt-2">{{username}}</h5>
        </div>
      <div class="card-body bg-primary">
    <div class="row bg-secondary pl-1 pr-1">
      <div class="col-md-4 pl-3 pr-3 ">
        {{#if post_links}}
  <iframe class="col-lg-12 col-md-11 col-sm-12 pl-1 pr-0 " width="" src="https://www.youtube.com/embed/eZTS4cL4Euo" title="cat jam original" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        {{/if}}
        
        {{#if post_image}}
 <img>
        {{/if}}
      </div>
      <div class="card-content col-md-8">
        
        <p class="pl-2 pr-2">{{post_body}}
        </p>
        <div class="button-options">
          <button type="button" class="btn-group btn-upvote-comment btn btn-success"><i
              class="fa-solid fa-circle-arrow-up"
            > {{votes}}</i></button>
          <button type="button" class="btn-group btn-downvote-comment btn btn-danger"><i
              class="fa-solid fa-circle-down"
            > 0</i></button>
          <button
            type="button"
            class="btn-group btn-delete-comment btn btn-secondary"
          ><i class="fa-solid fa-trash-can"></i></button>
        </div>
      </div>
    </div>
  </div>

